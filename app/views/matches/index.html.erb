<div class="row match_page">
  <div class="col-md-2">
    <ul class="league_menu">
      <% @leagues.each do |league| %>
        <li><%= link_to "#{league.name}", matches_index_path(leg: league.id) %></li>
      <% end %>
    </ul>
  </div>
  <div class="col-md-10">
    <div class="bg-content">
      <% if @matches.any? %>
        <table class="table table-striped table-match table-bordered">
          <thead>
            <tr>
              <th><%= t ".time" %></th>
              <th><%= t ".leagues" %></th>
              <th><%= t ".match" %></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td colspan="3" class="title">
                <h4><%= t ".world_cup" %></h4>
              </td>
            </tr>
            <% @matches.each do |match| %>
              <tr>
                <td><%= match.start_time.strftime("%d/%m %H:%M") %></td>
                <td><%= match.league.name %></td>
                <td>
                  <p class="mark-title">
                    <%= match.team_1.name %> - <%= match.team_2.name %>
                  </p>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <h4 class="text-center"><%= t ".not_found" %></h4>
      <% end %>
      <div class="pagination_cover text-center">
        <%= paginate @matches, theme: "twitter-bootstrap-3" %>
      </div>
    </div>
  </div>
</div>
